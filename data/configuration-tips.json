            "echo 'GRUB_CMDLINE_LINUX_DEFAULT=\"$GRUB_CMDLINE_LINUX_DEFAULT intel_pstate=active\"' | sudo tee -a /etc/default/grub", 
            "sudo grub-mkconfig -o /boot/grub/grub.cfg",
